<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="SyllabusActivityTheme" parent="AppTheme">

        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796b</item>
        <item name="colorAccent">#ffffff</item>

    </style>

    <style name="ResourcesActivityTheme" parent="AppTheme">

        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">#ffffff</item>

    </style>

    <style name="CircularActivityTheme" parent="AppTheme">

        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryDark">#f57c00</item>
        <item name="colorAccent">#ffffff</item>

    </style>

    <style name="ResultActivityTheme" parent="AppTheme">

        <item name="colorPrimary">#7b1fa2</item>
        <item name="colorPrimaryDark">#6a1b9a </item>
        <item name="colorAccent">#ffffff</item>

    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/holo_red_light</item>
        <item name="colorAccent">@android:color/holo_red_light</item>

    </style>

    <style name="SignupActivityTheme" parent="AppTheme">

        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/holo_red_light</item>
        <item name="colorAccent">@android:color/holo_red_light</item>

    </style>

    <style name="ProfileActivityTheme" parent="AppTheme">

        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/holo_red_light</item>
        <item name="colorAccent">@android:color/holo_red_light</item>

    </style>

    <style name="FeedDetailActivityTheme" parent="AppTheme">

        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@android:color/black</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textInputLayout" parent="AppTheme">
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>


</resources>
