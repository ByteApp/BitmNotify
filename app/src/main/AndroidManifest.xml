<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bitmnotify">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.android.bitmnotify.ParseClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".CircularActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CircularActivityTheme" />

        <activity
            android:name=".ResourcesActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/ResourcesActivityTheme" />

        <activity
            android:name=".ResultActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/ResultActivityTheme" />

        <activity
            android:name=".SyllabusActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SyllabusActivityTheme" />

        <activity
            android:name=".MainActivity"
            android:label="Bitm Notify"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" />

    </application>

</manifest>